<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ufam.promobile.museudosmisterios.Capacete.Capacete_17"
    android:background="@drawable/bg_pedras">

    <ImageView
        android:layout_width="650px"
        android:layout_height="550px"
        android:id="@+id/imageView"
        android:src="@drawable/porta_greco"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="650px"
        android:layout_height="550px"
        android:id="@+id/imageView2"
        android:src="@drawable/porta_idademedia"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginRight="251dp"
        android:layout_marginEnd="251dp" />

    <ImageView
        android:layout_width="650px"
        android:layout_height="550px"
        android:id="@+id/imageView3"
        android:src="@drawable/porta_viquingues"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="650px"
        android:layout_height="550px"
        android:id="@+id/imageView4"
        android:src="@drawable/porta_colecao"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/capacete_17_1"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40sp" />

</RelativeLayout>
