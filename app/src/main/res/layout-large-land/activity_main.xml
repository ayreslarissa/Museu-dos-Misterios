<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ufam.promobile.museudosmisterios.Tela_Principal.MainActivity"
    android:id="@+id/relativemain"
    android:background="@drawable/pergaminho">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_detetive"
        android:background="@drawable/detective_large"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_jogar"
        android:layout_toEndOf="@+id/button_jogar"
        android:layout_marginLeft="497dp"
        android:layout_marginStart="497dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_passos"
        android:background="@drawable/variospassos"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/iv_detetive"
        android:layout_alignEnd="@+id/iv_detetive" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogar"
        android:id="@+id/button_jogar"
        android:background="@android:color/transparent"
        android:textColor="@color/branco"
        android:textSize="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/iv_passos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruções"
        android:id="@+id/button_instrucoes"
        android:background="@android:color/transparent"
        android:textColor="@color/branco"
        android:textSize="45dp"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_below="@+id/iv_passos"
        android:layout_alignRight="@+id/iv_passos"
        android:layout_alignEnd="@+id/iv_passos" />
</RelativeLayout>
